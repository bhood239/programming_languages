<h1>Programming Languages</h1>
<%= link_to 'New Programming Language', new_programming_language_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programming_languages.each do |programming_language| %>
      <tr>
        <td><%= programming_language.title %></td>
        <td><%= programming_language.description %></td>
        <td><%= link_to 'View', programming_language %></td>
        <td><%= link_to 'Edit', edit_programming_language_path(programming_language) %></td>
        <td><%= link_to 'Delete', programming_language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

